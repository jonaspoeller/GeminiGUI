<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Farbpalette für helles Gemini-Design mit Grauabstufungen -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F1F3F4"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#E8EAED"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4285F4"/>
    <SolidColorBrush x:Key="PrimaryVariantBrush" Color="#1A73E8"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#34A853"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#EA4335"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#202124"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5F6368"/>
    <SolidColorBrush x:Key="TextBrush" Color="#202124"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#DADCE0"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#E8EAED"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#E8F0FE"/>
    <SolidColorBrush x:Key="UserMessageBrush" Color="#4285F4"/>
    <SolidColorBrush x:Key="AssistantMessageBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EA4335"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#34A853"/>
    
    <!-- Spezielle Farben für Chat und Eingabe -->
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="#FFFFFF"/>

</ResourceDictionary>

