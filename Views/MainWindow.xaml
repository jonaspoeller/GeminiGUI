<Window x:Class="GeminiGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GeminiGUI.Views"
        xmlns:converters="clr-namespace:GeminiGUI.Converters"
        Title="Gemini GUI" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        >

    <Window.Resources>
        <!-- Converters are now defined in App.xaml -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Google Gemini Client" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>

                <!-- Model Selection Dropdown -->
                <ComboBox Grid.Column="1" 
                          SelectedItem="{Binding SelectedModel}"
                          ItemsSource="{Binding AvailableModels}"
                          Style="{StaticResource ModernComboBox}"
                          MinWidth="150"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Neuer Chat" Command="{Binding CreateNewChatCommand}" Style="{StaticResource ModernButton}" MinWidth="100" Padding="16,8" Margin="0,0,8,0"/>
                    <Button Content="Einstellungen" Command="{Binding OpenSettingsCommand}" Style="{StaticResource ModernButton}" MinWidth="100" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="100"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Chat List Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Sidebar Header -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceVariantBrush}" Padding="16,12">
                        <TextBlock Text="Chats" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <!-- Chat List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Chats}" 
                             SelectedItem="{Binding SelectedChat}"
                             Style="{StaticResource ModernListBox}">
                        <ListBox.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenu}">
                                <MenuItem Header="Bearbeiten" Click="EditChatMenuItem_Click" Style="{StaticResource ModernMenuItem}"/>
                                <MenuItem Header="LÃ¶schen" Click="DeleteChatMenuItem_Click" Style="{StaticResource ModernMenuItem}"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        BorderBrush="{StaticResource BorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="12,8" 
                                        Margin="8,4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding Title}" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Resizer -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>

            <!-- Chat Content -->
            <ContentControl Grid.Column="2" Content="{Binding CurrentChatViewModel}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto" MinHeight="250"/>
                            </Grid.RowDefinitions>

                            <!-- Chat Header -->
                            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="8,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Image Grid.Column="0"
                                           Source="icon.ico"
                                           Width="20"
                                           Height="20"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>

                                    <TextBox Grid.Column="1"
                                             Text="{Binding ChatTitle, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="16" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsReadOnly="True"
                                             Cursor="Arrow"
                                             MouseDoubleClick="ChatTitleTextBox_MouseDoubleClick"
                                             Name="ChatTitleTextBox"/>
                                </Grid>
                            </Border>

                            <!-- Messages -->
                            <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="{StaticResource ChatBackgroundBrush}" Style="{StaticResource ModernScrollViewer}">
                                <Grid>
                                    <!-- Chat Messages -->
                                    <ItemsControl ItemsSource="{Binding Messages}" 
                                                  Margin="16"
                                                  Visibility="{Binding DataContext.HasActiveChat, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.Resources>
                                        <!-- Chat Message Template -->
                                        <DataTemplate x:Key="ChatMessageTemplate">
                                            <views:ChatMessageControl 
                                                Role="{Binding Role}"
                                                Content="{Binding Content}"
                                                Timestamp="{Binding Timestamp}"
                                                Margin="0,8"/>
                                        </DataTemplate>
                                        
                                        <!-- Date Separator Template -->
                                        <DataTemplate x:Key="DateSeparatorTemplate">
                                            <Border Background="#FFE0E0E0" 
                                                    CornerRadius="12" 
                                                    Padding="16,8" 
                                                    HorizontalAlignment="Center" 
                                                    Margin="0,16">
                                                <TextBlock Text="{Binding DisplayText}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold" 
                                                           Foreground="#FF666666"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.Resources>
                                    
                                    <ItemsControl.ItemTemplateSelector>
                                        <views:MessageTemplateSelector 
                                            ChatMessageTemplate="{StaticResource ChatMessageTemplate}"
                                            DateSeparatorTemplate="{StaticResource DateSeparatorTemplate}"/>
                                    </ItemsControl.ItemTemplateSelector>
                                    </ItemsControl>
                                    
                                    <!-- No Chat Message -->
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" 
                                                Visibility="{Binding DataContext.HasActiveChat, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <TextBlock Text="Lege deinen ersten Chat an" 
                                                   FontSize="18" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#FF888888" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="Klicke auf 'Neuer Chat' um zu beginnen" 
                                                   FontSize="14" 
                                                   Foreground="#FFAAAAAA" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>

                            <!-- Resizer zwischen Chat und Input -->
                            <GridSplitter Grid.Row="2" 
                                          HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch"
                                          Background="{StaticResource BorderBrush}"
                                          ShowsPreview="False"
                                          ResizeDirection="Rows"/>

                            <!-- Input Area -->
                            <Border Grid.Row="3" Background="{StaticResource InputBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" MinHeight="80"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBox Grid.Row="0" 
                                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             Margin="0,0,0,8"
                                             KeyDown="MessageInputTextBox_KeyDown">
                                        <TextBox.IsEnabled>
                                            <Binding Path="DataContext.IsInputEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                        </TextBox.IsEnabled>
                                    </TextBox>

                                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                                        <Button Content="Senden" 
                                                Command="{Binding SendMessageCommand}"
                                                Style="{StaticResource ModernButton}"
                                                Width="120"
                                                Height="40"
                                                FontSize="14"
                                                Margin="0,4,0,4">
                                            <Button.IsEnabled>
                                                <Binding Path="DataContext.IsInputEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                            </Button.IsEnabled>
                                        </Button>
                                        <TextBlock Text="Strg + Enter" 
                                                   FontSize="10" 
                                                   Foreground="#FF888888"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding ApiKeyStatus}" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>