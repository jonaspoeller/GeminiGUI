<Window x:Class="GeminiGUI.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemini GUI - Log Viewer" 
        Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Log Viewer" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,16,0"/>
                    <TextBlock Text="Detailed error logs and debug information" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh" Command="{Binding RefreshLogsCommand}" Style="{StaticResource ModernButton}" Margin="0,0,8,0"/>
                    <Button Content="Close" Click="CloseButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="16">
            <TextBox Text="{Binding LogContent}" 
                     Background="{StaticResource SurfaceBrush}"
                     Foreground="{StaticResource TextPrimaryBrush}"
                     BorderThickness="0"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16,8">
            <TextBlock Text="Log files are stored in %APPDATA%\GeminiGUI\Logs\" 
                       Foreground="{StaticResource TextSecondaryBrush}" 
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
